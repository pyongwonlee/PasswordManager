@model PasswordManager.Models.Entities.City

@{
    ViewBag.Title = "Delete";
}

<h2>Delete City</h2>

<h3>Are you sure you want to delete [@Model.Name, @Model.Province.Abbreviation]?</h3>
<div>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    }
</div>

<hr />

<div>
    @Html.ActionLink("Back to List", "Index", new { province = "All", page = 1 }, new { @class = "btn btn-link" })
</div>
