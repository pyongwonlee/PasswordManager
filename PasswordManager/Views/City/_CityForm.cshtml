@model PasswordManager.Models.Entities.City

    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <label class="control-label col-md-2" for="ProvinceId">Province</label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ProvinceId, (SelectList)ViewBag.ProvinceIdDropdown, String.Empty, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ProvinceId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>    

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@ViewBag.SumbitTitle" class="btn btn-primary" />
        </div>
    </div>
</div>