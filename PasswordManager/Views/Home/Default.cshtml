@{
    ViewBag.Title = "Default";
}

<div>
    <h2>Password Manamgement System</h2>
</div>
<br />

<div class="alert alert-info">
    <h4>Please Login to see your account information.</h4>
</div>

<div class="row">
    <div class="col-sm-4">
        <h4>Passwords</h4>
        <hr />
        <div class="well well-sm">
            <ul>
                <li>Manage IDs and Passwords</li>
            </ul>
        </div>
