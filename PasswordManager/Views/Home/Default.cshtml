            <ul>
                <li>@Html.ActionLink("Movies", "Index", "Movie")</li>
                <li>@Html.ActionLink("Directors", "Index", "Director", new { page = 1 }, null)</li>
            </ul>
        </div>
    </div>
    <div class="col-sm-4">
        <h4>Art Centres</h4>
        <hr />
        <div class="well well-sm">
            <ul>
                <li>@Html.ActionLink("Art Centres", "Index", "ArtCenter")</li>
                <li>@Html.ActionLink("Cities", "Index", "City", new { province = "All", page = 1 }, null)</li>
            </ul>
        </div>
    </div>
